@model BugTrackingSystem.Models.Bug

<h1>Delete Bug</h1>

<div>
    <h4>Are you sure you want to delete this bug?</h4>
    <dl class="dl-horizontal">
        <dt>Summary</dt>
        <dd>@Model.Summary</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Cancel</a>
    </form>
</div>
