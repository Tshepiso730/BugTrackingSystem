@model IEnumerable<BugTrackingSystem.Models.Bug>

<h1>Bug List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Summary</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model)
        {
            <tr>
                <td>@bug.Summary</td>
                <td>@bug.Description</td>
                <td>@bug.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bug.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@bug.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@bug.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
